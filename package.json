{
  "name": "portcullis",
  "productName": "Portcullis",
  "version": "1.0.0-beta.1",
  "description": "A modern GUI frontend for Neverwinter.nim CLI tools",
  "author": "Your Name",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/portcullis",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --linux",
    "dist": "npm run build:all",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "neverwinter",
    "nim",
    "cli",
    "gui",
    "electron",
    "d&d",
    "bioware"
  ],
  "dependencies": {},
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "com.yourname.portcullis",
    "productName": "Portcullis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "tool_usages.json",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "README.md",
        "to": "README.md",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "yourusername",
      "repo": "portcullis"
    }
  }
}
